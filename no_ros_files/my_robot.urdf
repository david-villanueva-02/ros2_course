<?xml version="1.0"?>
<robot name="my_robot">

    <!-- Green material -->
    <material name="green">
        <color rgba="0 0.5 0 1"/>
    </material>

    <!-- Blue material -->
    <material name="blue">
        <color rgba="0 0 0.5 1"/>
    </material>

    <!-- Grey color-->
    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <!-- Base link-->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <geometry>
                <box size="0.6 0.4 0.2" /> 
            </geometry>
            <material name="blue" />
        </visual>
    </link>

    <!-- Temporal second link-->
    <link name="second_link">
        <visual>
            <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.1" length="0.2"/>
            </geometry>
            <material name="grey" />
        </visual>
    </link>

    <!-- Base-second joint-->
    <joint name="base_second_joint" type="revolute"> <!--For rotations, needs limits-->
    <!-- joint name="base_second_joint" type="prismatic" For translations, needs limits-->
    <!-- joint name="base_second_joint" type="continuous" For wheels-->
        <parent link="base_link"/>
        <child link="second_link"/>
        <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
        <axis xyz="1 0 0"/>
        <limit lower="0.0" upper="0.2" effort="100" velocity="100"/>
    </joint>

</robot>