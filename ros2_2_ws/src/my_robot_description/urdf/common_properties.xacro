<?xml version="1.0"?>
<robot xmlns:xacro="https://www.ros.org/wiki/xacro">

    <!-- Green material -->
    <material name="green">
        <color rgba="0 0.5 0 1"/>
    </material>

    <!-- Blue material -->
    <material name="blue">
        <color rgba="0 0 0.5 1"/>
    </material>

    <!-- Grey material-->
    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <!-- Box Intertial macro-->
    <xacro:macro name="box_inertia" params="m x y z o_xyz o_rpy">
        <inertial>
            <mass value="${m}" />
            <origin xyz="${o_xyz}" rpy="${o_rpy}"/>
            <inertia ixx="${(m/12) *(y*y + z*z)}" ixy="0" ixz="0" 
                     iyy="${(m/12)*(x*x + z*z)}" iyz="0" 
                     izz="${(m/12)*(y*y + x*x)}"/>
        </inertial>
    </xacro:macro>

    <!-- Cylinder Intertial macro-->
    <xacro:macro name="cylinder_inertia" params="m r h o_xyz o_rpy">
        <inertial>
            <mass value="${m}" />
            <origin xyz="${o_xyz}" rpy="${o_rpy}"/>
            <inertia ixx="${(m/12) *(3*r**2 + h**2)}" ixy="0" ixz="0" 
                     iyy="${(m/12) *(3*r**2 + h**2)}" iyz="0" 
                     izz="${(m*r**2)/2}"/>
        </inertial>
    </xacro:macro>

    <!-- Sphere Intertial macro-->
    <xacro:macro name="sphere_inertia" params="m r o_xyz o_rpy">
        <inertial>
            <mass value="${m}" />
            <origin xyz="${o_xyz}" rpy="${o_rpy}"/>
            <inertia ixx="${2*(m*r**2)/5}" ixy="0" ixz="0" 
                     iyy="${2*(m*r**2)/5}" iyz="0" 
                     izz="${2*(m*r**2)/5}"/>
        </inertial>
    </xacro:macro>
</robot>